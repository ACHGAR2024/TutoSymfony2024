{% extends 'base.html.twig' %}

{% block title %}
    Articles
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            {% for article in articles %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow p-3 mb-5 bg-white rounded">
                        <img src="https://picsum.photos/700/500?random={{ article.id }}" class="card-img-top" alt="Article Image">

                            <div class="card-body">
                                <h5 class="card-title">
                                    {{ article.title }}
                                </h5>
                                <p class="card-text">
                                    {{ article.content }}
                                </p>

                                <a href="{{ path('app_articles_show', {'id': article.id}) }}" class="btn btn-primary">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <p>
                            No articles found.
                        </p>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}
    