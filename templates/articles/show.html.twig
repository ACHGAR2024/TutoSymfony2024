{% extends 'base.html.twig' %}

{% block title %}
    Article Details
{% endblock %}

{% block body %}
    <h1 class="bg-primary text-white p-3 rounded">
        Article Details
    </h1>

    <div class="card mt-4">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">
                            Id
                        </th>
                        <td>
                            {{ article.id }}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">
                            Title
                        </th>
                        <td>
                            {{ article.title }}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">
                            Content
                        </th>
                        <td>
                            {{ article.content }}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_articles_index') }}" class="btn btn-secondary">
            Back to list
        </a>
        <a href="{{ path('app_articles_edit', {'id': article.id}) }}" class="btn btn-primary">
            Edit
        </a>
        {{ include('articles/_delete_form.html.twig') }}
    </div>
{% endblock %}
