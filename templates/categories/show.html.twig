{% extends 'base.html.twig' %}

{% block title %}
    Category Details
{% endblock %}

{% block body %}
    <h1 class="bg-primary text-white p-3 rounded">
        Category Details
    </h1>

    <div class="card mt-4">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">
                            Id
                        </th>
                        <td>
                            {{ category.id }}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">
                            Name
                        </th>
                        <td>
                            {{ category.name }}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_categories_index') }}" class="btn btn-secondary">
            Back to list
        </a>
        <a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn btn-primary">
            Edit
        </a>
        {{ include('categories/_delete_form.html.twig') }}
    </div>
{% endblock %}
