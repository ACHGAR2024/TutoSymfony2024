{% extends 'base.html.twig' %}

{% block title %}
    Categories index
{% endblock %}

{% block body %}
    <h1 class="bg-black text-white p-3 rounded">
        Categories index
    </h1>
    <div style="text-align: right">
        <a href="{{ path('app_categories_new') }}" class="btn btn-primary">
            Create new
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>
                        {{ category.id }}
                    </td>
                    <td>
                        {{ category.name }}
                    </td>
                    <td>
                        <a href="{{ path('app_categories_show', {'id': category.id}) }}" class="btn btn-sm btn-primary m-1">
                            show
                        </a>
                        <a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn btn-sm btn-primary m-1">
                            edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">
                        no records found
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
